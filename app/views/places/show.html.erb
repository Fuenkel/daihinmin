<script type="text/javascript">
  //<![CDATA[
  dd.place.ShowOption.start_url = "<%= start_place_path %>";
  dd.place.ShowOption.open_url = "<%= open_place_path %>";

  $(document).ready(function(){
    var show = new dd.place.Show("<%= @place.id %>");
    var socket = new MyWebScoket();

    // webcoket start
    socket.start();

    // button action
    $("#start").click(function(){show.start()});
    $("#open").click(function(){show.open()});
  });
  //]]>
</script>

